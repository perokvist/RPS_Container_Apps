{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api1": {
        "ClusterId": "daprSidecar",
        "Transforms": [
          {
            "RequestHeader": "dapr-app-id",
            "Append": "api1"
          }
        ],
        "Match": {
          "Path": "/api1/{*any}"
        }
      },
      "ratingRequests": {
        "ClusterId": "daprSidecar",
        "Transforms": [
          {
            "RequestHeader": "dapr-app-id",
            "Append": "api2"
          }
        ],
        "Match": {
          "Path": "/api2/{*any}"
        }
      }
    },
    "Clusters": {
      "daprSidecar": {
        "Destinations": {
          "sidecar": {
            "Address": "http://localhost:3500/"
          }
        }
      }
    }
  }
}